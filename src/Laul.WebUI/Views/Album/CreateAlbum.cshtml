@model Laul.WebUI.Models.Album.CreateAlbumDto

@{
    ViewData["Title"] = "Create Album";
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/js/Profile/profilePhotoPriview.js"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <!-- Форма для редагування профілю -->
    <form asp-action="CreateAlbum" asp-controller="Album" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ArtistId" />

        <div>
            <label asp-for="Title">Title:</label>
            <textarea asp-for="Title"></textarea>
        </div>

        <div>
            <label asp-for="PublishDate">Publish Date:</label>
            <input asp-for="PublishDate" type="date" />
        </div>

        <div>
            <label asp-for="Genre">Genre:</label>
            <textarea asp-for="Genre"></textarea>
        </div>

        <div>
            <label asp-for="Image">Photo:</label>
            <input type="file" asp-for="Image" accept="image/*" onchange="previewImage(this)" />
            <div id="photoPreview" style="margin-top: 10px; max-width: 200px; max-height: auto;"></div>
        </div>

        <button type="submit">Save Changes</button>
    </form>
</body>
</html>

