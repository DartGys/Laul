<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laul.WebUI</title>
    <link rel="stylesheet" href="~/css/bootstrap_morph.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Laul.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
</head>
<body>
    <div class="sidebar">
        <div class="top">
            <div class="logo">
                <img src="~/img/Laul_logo.png" style="width: 50px; height: 50px;">
                <span style="font-size:20px; font-weight:bold">Lual</span>
            </div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <ul>
            <li>
                <a href="@Url.Action("Index","Home")">
                    <i class="bx bx-home-alt-2"></i>
                    <span class="nav-item">Home</span>
                </a>
                <span class="tooltip">Home</span>
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
                <li>
                <a href="@Url.Action("Login","Account")">
                    <i class='bx bx-log-in'></i>
                    <span class="nav-item">Login</span>
                </a>
                <span class="tooltip">Login</span>
                </li>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a href="@Url.Action("GetPlaylistList", "Playlist")">
                        <i class="bx bxs-playlist"></i>
                        <span class="nav-item">Playlist</span>
                    </a>
                    <span class="tooltip">Playlist</span>
                </li>
                <li>
                    <a href="@Url.Action("GetArtistDetails","Profile")">
                    <i class='bx bxs-user-account'></i>
                    <span class="nav-item">Account</span>
                </a>
                <span class="tooltip">Account</span>
                </li>
                <li>
                <a href="@Url.Action("Logout","Account")">
                    <i class='bx bx-log-out'></i>
                    <span class="nav-item">Logout</span>
                </a>
                <span class="tooltip">Logout</span>
                </li>
            }
        </ul>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="modal fade" id="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>


    <div class="main-content">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>

    <footer>
        <div id="footer" style="display: none;">
            <audio id="footerAudioPlayer" controls style="width: 100%;">
                <source src="" type="audio/mp3">
            </audio>

            <div style="display: flex; justify-content: space-between;">
                <div id="footerInfo" style="text-align: left">
                    <img style="width: 50px; margin-left: 10px" id="footerPhoto" src="" alt="Photo">
                    <span id="footerTitle"></span>
                    <span id="footerArtist"></span>
                    <span id="footerAlbum"></span>
                </div>

                <div style="text-align: center;">
                    <i style="font-size: 40px" class='bx bx-skip-previous custom-icon' onclick="prevSong()"></i>
                    <i style="font-size: 40px" class='bx bx-skip-next custom-icon' onclick="nextSong()"></i>
                </div>

                <div style="text-align: right;">
                    <i class='bx bx-shuffle custom-icon' onclick="shuffleSong()"></i>
                    <i id="likeButton" class="bx custom-icon" onclick="toggleLike(this)" onmouseover="addHoverEffect(this)" onmouseout="removeHoverEffect(this)"></i>
                    <i id="dislikeButton" class="bx custom-icon" onclick="toggleDisLike(this)" onmouseover="addHoverEffect(this)" onmouseout="removeHoverEffect(this)"></i>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/js/sidebar.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/LikeDislike/loadLikeDislike.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/LikeDislike/setLikeDislike.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
