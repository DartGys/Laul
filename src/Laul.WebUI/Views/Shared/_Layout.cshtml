<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Laul.WebUI</title>
    <link rel="stylesheet" href="~/css/bootstrap_morph.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/Laul.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <script src="~/js/sidebar.js"></script>
</head>
<body>
    <div class="sidebar">
        <div class="top">
            <div class="logo">
                <img src="~/img/Laul_logo.png" style="width: 50px; height: 50px;">
                <span style="font-size:20px; font-weight:bold">Lual</span>
            </div>
            <i class="bx bx-menu" id="btn"></i>
        </div>
        <ul>
            <li>
                <a href="#">
                    <i class="bx bx-home-alt-2"></i>
                    <span class="nav-item">Home</span>
                </a>
                <span class="tooltip">Home</span>
            </li>
            <li>
                <a href="#">
                    <i class="bx bxs-playlist"></i>
                    <span class="nav-item">Playlist</span>
                </a>
                <span class="tooltip">Playlist</span>
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
                <li>
                <a href="@Url.Action("Login","Account")">
                    <i class='bx bx-log-in'></i>
                    <span class="nav-item">Login</span>
                </a>
                <span class="tooltip">Login</span>
                </li>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                <a href="@Url.Action("Logout","Account")">
                    <i class='bx bx-log-out'></i>
                    <span class="nav-item">Logout</span>
                </a>
                <span class="tooltip">Logout</span>
                </li>
                 <li>
                    <a href="https://localhost:5443/diagnostics">
                    <i class='bx bxs-user-account'></i>
                    <span class="nav-item">Account</span>
                </a>
                <span class="tooltip">Account</span>
                </li>
            }
        </ul>
    </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>

    <footer class="">
        <div class="container">
            &copy; 2023 - Laul.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
