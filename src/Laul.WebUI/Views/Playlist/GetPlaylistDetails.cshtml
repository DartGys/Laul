@model Laul.Application.Services.Playlists.Queries.GetPlaylistDetails.PlaylistDetailsVm

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/playlistDetails.css"/>
    <script src="~/js/Song/togleAndPlay.js"></script>
</head>
<body>
    <div class="container">
        <div class="title">
            <h1>@Model.Title</h1>
        </div>

        <div class="description">
            <p>@Model.Description</p>
        </div>
    </div>
    <table class="table">
        @foreach(var item in Model.Songs)
        {
            <tr class="song-cover" onmouseover="changeCursor(this)">
                <td style="width: 50px; height: 50px" onclick="toggleAndPlayAudio('@item.Storage')">
                    <img style="block-size: 50px" src="@item.Photo"/>
                </td>
                <td style="width: 350px; height: 50px">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td style="width: 200px; height: 50px">
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumTitle)
                </td>
            </tr>
        }
    </table>

</body>
</html>
