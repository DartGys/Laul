@using Laul.Application.Songs.Queries.GetSongList;
@model SongListVm
@{
    ViewData["Title"] = "Home Page";
}

<h1>Song List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Duration seconds</td>
            </tr>
        }
    </tbody>
</table>
